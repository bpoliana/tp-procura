<script type='text/javascript'>
 function excluirFornecedor(idParametro) {
 	var result = confirm("Tem certeza que quer deletar o fornecedor?");

   if(result){
            url = 'http://127.0.0.1:8000/proc/fornecedor_delete/'+ idParametro
            window.open(url, '_blank');
        }
    }

 function atualizarFornecedor(idParametro) {
            url = 'http://127.0.0.1:8000/proc/patientupdate/'+ idParametro
            window.open(url, '_blank');
        }
</script>
